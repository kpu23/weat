<% include layouts/admin_header %>


<div class="weat-content" style="display:list-item;">

    <div class="container" id="menu-manager">
        <h1 style="margin:10px;">Your Menus</h1>
        <div class="row">
            <div data-bind="foreach: menus" >
                <a href="#">
                    <div class="menu col-lg-4">
                        <p data-bind="text: name"></p>
                    </div>
                </a>
            </div>
            <a href="" data-toggle="modal" data-target="#create-menu-section">
                <div class="create-menu col-lg-4">
                    <p>Add New Menu <i class="fa fa-plus-square fa-2x"></i></p>
                </div>
            </a>
        </div>

        <!-- Modal -->
        <div id="create-menu-section" class="modal fade" role="dialog">
            <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content" data-bind="with: newMenu">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Create a menu</h4>
                    </div>
                    <div class="modal-body">
                        <form>
                            <fieldset class="form-group">
                                <label for="menu-name">Menu Name</label>
                                <input type="text" class="form-control" id="menu-name" placeholder="Menu Name" data-bind="value: name">
                            </fieldset>
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" data-bind="value: isPublic"> Public
                                    <small class="text-muted">All customers can see the menu on your site. You can set this later too.</small>
                                </label>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-success" data-bind="click: $root.createMenu">Create Menu</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/scripts/admin-menu-manager.js"></script>

