<% include ../layouts/layout %>

<!-- Register -->
<div class="intro">
        <div class="intro-body">
            <div class = "container">
                <div class="wrapper">
                    <form action="" method="post" name="Login_Form" class="form-signin">       
                        <h3 class="form-signin-heading">Register</h3>
                        <hr class="colorgraph">
                        <% if(error){ %>
                            <span class="label label-danger"><%= message %></span>
                        <% } %>
                        <br>
                        <input type="text" class="form-control" name="firstName" placeholder="First Name*" autofocus />
                        
                        <input type="text" class="form-control" name="lastName" placeholder="Last Name*" required />
                        <br>                     
                        <input type="email" class="form-control" name="email" placeholder="Email*" required/>
                        <input type="password" class="form-control" name="password" placeholder="Password*" required/>
                        <br>
                        <input type="date" class="form-control" name="dob" placeholder="Date of Birth*" required/>
                        <input type="phone" class="form-control" name="phone" placeholder="Phone*" required/>
                        <div class="form-group">
                        <label for="sel1"></label>
                        <select class="form-control" id="sel1">
                            <option>Gender*</option>
                            <option>Male</option>
                            <option>Female</option>
                            </select>
                        </div> 
                        <input type="text" class="form-control" name="ethnicity" placeholder="Ethnicity" />
                        <input type="text" class="form-control" name="occuption" placeholder="Occupation" />
                        <br>
                        <div class="black_text">
                        * Denotes a Required Field
                        </div>
                        <button class="btn btn-lg btn-primary btn-block"  
                        name="Submit" value="Login" type="Submit">Register</button>
                        <br>
                    </form>     
                </div>
            </div>
        </div>
</div>
<script src="/scripts/auth.js"></script>


