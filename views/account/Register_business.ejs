<% include ../layouts/header %>

<!-- Register -->
<div class="intro">
        <div class="intro-body">
            <div class = "container">
                <div class="wrapper">
                    <form action="" method="post" name="Login_Form" class="form-signin">       
                        <h3 class="form-signin-heading">Register</h3>
                        <hr class="colorgraph">
                        <br>       
                        <div id="user-info">
                            <input type="text" class="form-control" name="firstname" placeholder="First Name" required="" autofocus="" />                    
                            <input type="text" class="form-control" name="lastname" placeholder="Last Name" required="" />                       
                            <br>       
                            <input type="email" class="form-control" name="email" placeholder="Email" required=""/>                                                
                            <input type="password" class="form-control" name="password" placeholder="Password" required=""/>  
                        </div>
                        <br>
                        <div id="business-info">
                            <input type="text" class="form-control" name="name" placeholder="Business Name" required="" />
                            <input type="text" class="form-control" name="displayName" placeholder="Display Name" required="" />
                            <div class="form-group">
                                <label for="sel1">Restaurant Category</label>
                                <select class="form-control" id="sel1">
                                    <option>Resaurant Category</option>
                                    <option>American</option>
                                    <option>Mexican</option>
                                    <option>Asian</option>
                                    <option>Italian</option>
                                </select>
                            </div> 
                            <div class="form-group">
                                <label for="status">Is your rest currently open?</label>
                                <select class="form-control" id="status">
                                    <option>Yes</option>
                                    <option>No</option>                                 
                                </select>
                            </div> 
                            <input type="text" class="form-control" name="location" placeholder="City" required="" autofocus="" />     
                            <input type="phone" class="form-control" name="phone" placeholder="Business Phone Number" required="" autofocus="" />
                            <input type="text" class="form-control" name="siteURL" placeholder="Restaurant URL Name" required="" autofocus="" />
                            <input type="text" class="form-control" name="imgPath" placeholder="Logo Image Path" required="" autofocus="" />
                            <br>
                            <label>Description</label>
                            <textarea class="form-control" rows="3" name="longDescription" autofocus=""></textarea>
                        </div>
                        <br>
                        <button class="btn btn-lg btn-primary btn-block"  name="Submit" value="Login" type="Submit">Register</button>
                        <br>
                    </form>     
                </div>
            </div>
        </div>
</header>

